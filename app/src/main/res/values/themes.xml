<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Astro" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Astro.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/data</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.Astro</item>
    </style>
</resources>